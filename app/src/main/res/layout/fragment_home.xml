                        app:fontFamily="@font/lexend_medium" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
