                        android:text="850px" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CBD2E0"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="3dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/number2" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="241dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:paddingLeft="14dp"
                        android:text="harun_asrori"
                        android:textSize="18dp"
                        app:fontFamily="@font/lexend_medium" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="55dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:background="@drawable/custom_pointtext"
                        android:gravity="center"
                        android:text="850px" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CBD2E0"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="3dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/number3" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="241dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:paddingLeft="14dp"
                        android:text="glovico"
                        android:textSize="18dp"
                        app:fontFamily="@font/lexend_medium" />

                    <TextView
                        android:id="@+id/textView15"
